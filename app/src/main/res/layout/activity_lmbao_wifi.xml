<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@id/id_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:background="@color/roam_color" >

        <Button style="@style/backbtnstyle" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/lmbaowifi"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />
    </RelativeLayout>

    <ImageView
        android:id="@id/id_toplogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_titlelayout"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/toplogo_margin"
        android:layout_marginTop="@dimen/toplogo_margin"
        android:src="@drawable/logo_roaming_box_linked" />

    <TextView
        android:id="@+id/tv_please_connect_mlbao_wifi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_toplogo"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:text="@string/please_connect_mlbao_wifi"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/tv_connecttip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_please_connect_mlbao_wifi"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:id="@+id/btnConnected"
        style="@style/submitStyle"
        android:layout_below="@id/tv_connecttip"
        android:text="@string/connected" />

    <Button
        android:id="@+id/btnConnectNow"
        style="@style/submitStyle"
        android:background="@drawable/btn_submit_green_selecetor"
        android:layout_below="@id/btnConnected"
        android:layout_marginTop="20dp"
        android:text="@string/connectNow" />

</RelativeLayout>