<com.roamtech.telephony.roamapp.view.RippleBackground xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutCalling"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_calling"
    android:fitsSystemWindows="true"
    app:rb_animViewid="@+id/id_circle_image"
    app:rb_color="#77B7BBC0"
    app:rb_duration="3000"
    app:rb_radius="56dp"
    app:rb_rippleAmount="2"
    app:rb_scale="3"
    tools:context=".activity.CallingActivity">

    <TextView
        android:id="@+id/tv_savevoicetime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/red_dark"
        android:gravity="center"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:textColor="@color/white"
        android:textSize="@dimen/small_text_size"
        android:visibility="gone" />

    <TableLayout
        android:id="@+id/calls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:paddingTop="20dp" />

    <com.roamtech.telephony.roamapp.view.RoundImageView
        android:id="@id/id_circle_image"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:layout_below="@id/tv_savevoicetime"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/photo_bg_xl" />
    <!--  app:border_inside_color="#99B7BBC0"
            app:border_outside_color="#99D4D9DF"
            app:border_thickness="4dp" -->
    <TextView
        android:id="@id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_circle_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="申景冰"
        android:textColor="@color/white"
        android:textSize="@dimen/larger_text_size" />
    <!--  <Chronometer
	    android:id="@+id/tv_elapsetimer"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
        android:layout_below="@id/id_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
       	android:text="@string/callingwait"
	    android:textColor="@color/text_grey"
	    android:textSize="@dimen/normal_textsize" /> -->
    <TextView
        android:id="@+id/tv_callingstate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_username"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:text="@string/callingwait"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/normal_text_size" />

    <TextView
        android:id="@+id/tv_moneysave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_callingstate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="3dp"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/normal_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_callinghand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnhangup"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_callnumber"
                    style="@style/call_btnTextviewStyle"
                    android:drawableTop="@drawable/ic_calling_number_selecetor"
                    android:text="@string/callnumber" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/calling_line_margin"
                android:layout_marginTop="@dimen/calling_line_margin"
                android:background="@color/white_alpha_3f" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_savevoice"
                    style="@style/call_btnTextviewStyle"
                    android:drawableTop="@drawable/ic_save_voice_selecetor"
                    android:text="@string/savevoice" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/calling_line_margin"
                android:layout_marginRight="@dimen/calling_line_margin"
                android:layout_weight="1"
                android:background="@color/white_alpha_3f" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/calling_line_margin"
                android:layout_marginRight="@dimen/calling_line_margin"
                android:layout_weight="1"
                android:background="@color/white_alpha_3f" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_handfree"
                    style="@style/call_btnTextviewStyle"
                    android:drawableTop="@drawable/ic_hand_free_selecetor"
                    android:text="@string/handfree" />
            </LinearLayout>

            <View
                android:layout_width="1px"
                android:layout_height="fill_parent"
                android:layout_marginBottom="@dimen/calling_line_margin"
                android:layout_marginTop="@dimen/calling_line_margin"
                android:background="@color/white_alpha_3f" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_mute"
                    style="@style/call_btnTextviewStyle"
                    android:drawableTop="@drawable/ic_mute_selecetor"
                    android:text="@string/mute" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <ImageView
        android:id="@+id/btnhangup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/fitbottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/hangup_selector" />

    <GridView
        android:id="@+id/gv_keyboard"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btnhangup"
        android:horizontalSpacing="0dp"
        android:listSelector="@drawable/item_keyboard_selector"
        android:numColumns="3"
        android:verticalSpacing="0dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/btnhangup"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/btnhangup"
        android:layout_toRightOf="@id/btnhangup"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_hidekeybord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hide"
            android:textColor="@color/login_text_selector"
            android:textSize="@dimen/large_text_size"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/fitbottom"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true" />

</com.roamtech.telephony.roamapp.view.RippleBackground>