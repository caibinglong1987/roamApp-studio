<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@id/id_titlelayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_centerHorizontal="true"
        android:background="@color/roam_color">

        <Button style="@style/backbtnstyle" />

        <TextView
            android:id="@+id/contactName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Anglababy"
            android:textColor="@color/white"
            android:textSize="@dimen/title_text_size" />

        <TextView
            android:id="@id/id_edit"
            style="@style/nav_textviewStyle"
            android:layout_alignParentRight="true"
            android:text="@string/edit" />
    </RelativeLayout>

    <ImageView
        android:id="@id/id_line1"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/id_titlelayout"
        android:layout_marginTop="@dimen/item_jump_margintop" />

    <TextView
        android:id="@+id/tv_headphoto"
        style="@style/normalTextViewJumpStyle"
        android:layout_height="96dp"
        android:layout_below="@id/id_line1"
        android:clickable="true"
        android:text="@string/headphoto" />

    <com.roamtech.telephony.roamapp.view.RoundImageView
        android:id="@id/id_circle_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@id/tv_headphoto"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/tv_headphoto"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_default_userphoto" />

    <ImageView
        android:id="@id/id_line2"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/tv_headphoto" />

    <LinearLayout
        android:id="@+id/layout_username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_line2"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/username"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/id_username_show"
            style="@style/normalEditTextStyle"
            android:text="Anglababy"
            android:textColor="@color/lmbao_text_selector" />
    </LinearLayout>

    <ImageView
        android:id="@id/id_line3"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/layout_username" />

    <ScrollView
        android:id="@+id/contactphones"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_line3"
        android:layout_marginTop="@dimen/item_jump_margintop"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@id/id_line4"
                style="@style/lineHorizontalSrcStyle" />

            <TableLayout
                android:id="@+id/controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*" />
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:id="@id/id_line4"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/contactphones" />

    <ImageView
        android:id="@id/id_line5"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/contactphones"
        android:layout_marginTop="@dimen/item_jump_margintop" />

    <LinearLayout
        android:id="@+id/layout_black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/id_line5"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_blacklist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/add_blacklist"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <ImageView
        android:id="@id/id_line6"
        style="@style/lineHorizontalSrcStyle"
        android:layout_below="@id/layout_black" />
</RelativeLayout>