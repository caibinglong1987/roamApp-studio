<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1.7dp"
        android:background="@color/roam_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="Title"
            android:textColor="@color/text_black"
            android:textSize="@dimen/normal_text_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="223dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="购物即享9"
            android:textColor="@color/text_grey"
            android:textSize="@dimen/small_text_size" />

    </LinearLayout>

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/black_alpha_33" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/btn_left"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/button_ok"
            android:textColor="@color/roam_color_alpha_99"
            android:textSize="@dimen/large_text_size" />

        <View
            android:id="@+id/dividing_line"
            android:layout_width="1px"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:background="@color/black_alpha_21" />

        <TextView
            android:id="@+id/btn_right"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/btn_dialog_selector"
            android:clickable="true"
            android:gravity="center"
            android:text="@string/button_cancel"
            android:textColor="@color/roam_color"
            android:textSize="@dimen/large_text_size" />

    </LinearLayout>

</LinearLayout>