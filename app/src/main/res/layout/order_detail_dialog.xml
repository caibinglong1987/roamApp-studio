<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/flyt_detail"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#80000000"
    android:gravity="bottom"
    android:orientation="vertical"
    android:visibility="invisible" >
    <LinearLayout
        android:id="@+id/flyt_viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="52dp"
            android:contentDescription="不明原因他的位置会印象缓存背景获取的位置"
            android:src="@drawable/ic_detail_arrow" />
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <android.support.v4.view.ViewPager
                android:id="@+id/id_viewpager"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <com.roamtech.telephony.roamapp.view.CircleIndicator
                android:id="@+id/id_circle_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="10dp"
                app:ci_animator="@animator/indicator_no_animator"
                app:ci_drawable="@drawable/circle_sel"
                app:ci_drawable_unselected="@drawable/circle_nor"
                app:ci_height="5dp"
                app:ci_width="25dp" />
        </FrameLayout>
    </LinearLayout>

</LinearLayout>