<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@drawable/bg_coupon_flow"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_area"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="-5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_area_irl" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语音套餐"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

            <TextView
                android:id="@+id/tv_effectdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2016-04-24 至 2016-04-30"
                android:textColor="@color/white"
                android:textSize="@dimen/small_text_size" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_orderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"
        android:text="所属订单：1223435342"
        android:textColor="@color/white_alpha_7f"
        android:textSize="@dimen/small_text_size" />

    <!--<TextView-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginLeft="25dp"-->
    <!--android:layout_marginTop="20dp"-->
    <!--android:text="已使用于我的账户，请前往套餐查看使用详情"-->
    <!--android:textColor="@color/text_grey"-->
    <!--android:textSize="@dimen/small_textsize" />-->
</LinearLayout>
