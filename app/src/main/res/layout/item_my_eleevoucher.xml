<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selecetor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_coupon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/coupon_conversation" />

    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_coupon"
        android:layout_toRightOf="@+id/iv_coupon"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:textColor="@color/text_black"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_effectdate_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_coupon"
        android:layout_toRightOf="@+id/iv_coupon"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/effect_date"
        android:textColor="@color/text_black"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/smaller_text_size" />
    <TextView
        android:id="@+id/tv_effectdate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignBottom="@id/iv_coupon"
        android:layout_toRightOf="@+id/tv_effectdate_description"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="美国[2016-4-26 至 2016-5-3]"
        android:textColor="@color/text_grey"
        android:layout_marginBottom="8dp"
        android:textSize="@dimen/smaller_text_size" />
    <ImageView
        android:id="@+id/iv_trafffic_used"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@+id/iv_coupon"
        android:layout_alignParentBottom="true"
        style="@style/lineHorizontalStyle"
        />
</RelativeLayout>