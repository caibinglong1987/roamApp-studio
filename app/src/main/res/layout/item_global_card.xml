<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_selecetor"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_globalcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/rd_card_m" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/iv_globalcard"
        android:layout_toRightOf="@+id/iv_globalcard"
        android:singleLine="true"
        android:includeFontPadding="false"
        android:textColor="@color/text_black"
        android:textSize="@dimen/small_text_size" />

    <TextView
        android:id="@+id/tv_use_package"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_globalcard"
        android:layout_toRightOf="@+id/iv_globalcard"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="@string/use_package_key"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/smaller_text_size" />
    <TextView
        android:id="@+id/tv_package_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_globalcard"
        android:layout_toRightOf="@+id/tv_use_package"
        android:includeFontPadding="false"
        android:singleLine="true"
        android:text="美国[2016-4-26 至 2016-5-3]"
        android:textColor="@color/text_grey"
        android:textSize="@dimen/smaller_text_size" />
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_enter_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <View
        android:layout_marginLeft="-5dp"
        android:layout_toRightOf="@+id/iv_globalcard"
        android:layout_alignParentBottom="true"
        style="@style/lineHorizontalStyle"
        />
</RelativeLayout>