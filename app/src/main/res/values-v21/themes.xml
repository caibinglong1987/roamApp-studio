<resources>
    <dimen name="fitStatusPadding">25dp</dimen>
    <dimen name="meizufitHeight">1dp</dimen>
    <style name="buttonStyle">
        <!--api21 按钮有灰色阴影 去掉-->
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/height_button</item>
        <item name="android:background">@drawable/btn_submit_selecetor</item>
        <item name="android:textSize">@dimen/normal_text_size</item>
    </style>
    <!-- Application theme.like QQ  360 etc-->
    <style name="AppThemeTranslucent" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>
